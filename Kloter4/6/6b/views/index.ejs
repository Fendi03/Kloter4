<%- include('layout/header') -%>
<!-- Button trigger modal -->

<div class="container"><span class="style6">.</span>
  <table class="table">
    <thead>
    <tr>
      <th width="919" height="38"><img src="arkademy.png"></th>
      <th> </th>
        <th> </th>
        <th><a class="nav-link btn btn-success text-white mt-1" data-toggle="modal"  data-target="#modalcreate" role="tab">ADD</span></a></div></th>
      
    </tr>
    </thead>
    <tbody>
        <div class="container" >
      <table class ="table">
        <thead>
          <tr>
                <th>No</th>
                <th>Cashier</th>
                <th>Product</th>
                <th>Category</th>
                <th>Price</th>
                <th>Action</th>
              </tr>
              </thead>
              <tbody>
                <% dataShop.forEach((v)=>{ %>
                  <tr>
                    <td></td>
                    <td><%= v.namecas %></td>
                    <td><%= v.product%></td>
                    <td><%= v.name %></td>
                    <td><%= v.price%></td>
                    <td>
                      <a href="" data-toggle="modal" data-target="#modaledit<%= v.no %>" class="badge badge-warning ml-2 text-left">Edit</a>
                        | 
                        <a href="/delete?no=<%= v.no %>" class="badge badge-danger ml-2 text-left">Delete</a>
                        </td>
                  </tr>
                  <% }); %>
              </tbody>
          </table>
    </div>
    </tbody>
  </table>
</div>
  

  <div class="modal fade" id="modalcreate" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title" id="modalcreateLabel"><b>ADD</h2>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <form action="/create" method="POST">
                            <div class="form-group">
                              <label for = "cashier"></label>
                              <select name="cashier" class="form-control">
                                <%dataCashier.forEach((v)=>{%>
                                  <option value="<%= v.id %>"><%= v.namecas %></option>
                                <%})%>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for = "category"></label>
                              <select name="category" class="form-control">
                                <%dataCategory.forEach((v)=>{%>
                                  <option value="<%= v.idb %>"><%= v.name %></option>
                                <%})%>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="product"></label>
                              <input type="text" class="form-control" name="product">
                            </div>
                            <div class="form-group">
                              <label for="price"></label>
                              <input type="text" class="form-control" name="price">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </form>
                    </div>
                  </div>
            </div>
        
      </div>
    </div>
  </div>
  <% dataShop.forEach((v)=>{ %>
    <div class="modal fade" id="modaledit<%= v.no%>" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modaledit<%= v.no%>Label">Edit</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
              <div class="modal-body">
                  <div class="card">
                      <div class="card-body">
                          <form action="/update" method="POST">
                            <input type="text" value="<%= v.no%>" hidden name="no">
                            <div class="form-group">
                              <label for = "cashier"></label>
                              <select name="cashier" class="form-control">
                                <%dataCashier.forEach((v)=>{%>
                                  <option value="<%= v.id %>"><%= v.namecas %></option>
                                <%})%>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for = "category"></label>
                              <select name="category" class="form-control">
                                <%dataCategory.forEach((v)=>{%>
                                  <option value="<%= v.idb %>"><%= v.name %></option>
                                <%})%>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="product"></label>
                              <input type="text" class="form-control" name="product" value="<%= v.product %>">
                            </div>
                            <div class="form-group">
                              <label for="price"></label>
                              <input type="text" class="form-control" name="price" value="<%= v.price %>">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                      </div>
                    </div>
              </div>
          
        </div>
      </div>
    </div>
  <% }); %>





<%- include('layout/footer') -%>